<%= form_tag sessions_path do %>
  <div id="IniciaSesion">
  	<h2 id="labelLogin">Inicia tu sesión</h2>
  	
  <div class="field">
    <%= label_tag :email %> <br />
    <%= text_field_tag :email, params[:email] %>
  </div>
      <br />
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <br />
  <div class="field">
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%= label_tag :remember_me, 'Recuérdame' %>
  </div>
    <br />
  <div class="divEntrar"><%= submit_tag "Iniciar sesión", :class=>'btnEntrar' %></div>
  </div>

<% end %>
